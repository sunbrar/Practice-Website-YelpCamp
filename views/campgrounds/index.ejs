<% include ../partials/header.ejs %>

<div class="container">
  <header class="jumbotron">
    <div class = "container">
      <h1>Welcome to the camp page</h1>
      <p>Various campgrounds around the world!</p>
      <p>
        <a class="btn btn-primary btn-lrg" href = "/campgrounds/new">Add new campground</a>
      </p>
    </div>
  </header>
  
  <div class = "row" style = "display:flex; flex-wrap: wrap;">
    <div class = "col-lg-12">
      <!--<h3>Most popular campgrounds</h3>-->
    </div>
    
    <% campgrounds.forEach(function(data){ %>
      <div class = "col-md-3 col -sm-6">
        <div class = "thumbnail">
          <img src = "<%= data.image %>">
          <div class = "caption">
            <h4><%=data.name%></h4>
          </div>
          <p>
            <a href = "/campgrounds/<%=data._id%>" class="btn btn-primary">More Info</a>
          </p>
        </div>
      </div>
    <% }); %>
    
  </div>
  
</div>
<% include ../partials/footer.ejs %>